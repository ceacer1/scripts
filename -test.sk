
on right click:
    if event-item is chest:
        if name of event-item is "%player%'s silo":
            close inventory of player
            open gui {silo.%player%} to player
            
command /silo:
    trigger:
        give player chest named "%player%'s Silo"
        send "Silo had been created"
        set {_silo} to virtual hopper inventory named "&6Silo"
        format gui slot 0 of {_silo} with black stained glass pane named "&8 "
        open {_silo} to player

command /opensilo:
    trigger:
        open {silo::%player%} to player
